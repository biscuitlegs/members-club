<div class="posts-list">
    <h1>Recent Posts</h1>
    <ul>
        <% @posts.first(5).each do |post| %>
            <div class="post-container">
                <% if member_signed_in? %>
                    <div class="member-name">
                        <div class="small-icon">
                            <%= inline_svg_tag "crown_small.svg" %>
                        </div>
                        <p><%= post.member.name %></p>
                    </div>
                    <% if post.member.id == current_member.id %>
                        <div class="edit-icon">
                            <a href="<%= edit_post_path(post) %>">
                                <%= inline_svg_tag "pencil.svg" %>
                            </a>
                        </div>
                        <div class="delete-icon">
                            <a href="<%= post_path(post) %>" data-method="delete" data-confirm="Are you sure you want to delete this Post?">
                                <%= inline_svg_tag "trash.svg" %>
                            </a>
                        </div>
                    <% end %>
                <% else %>
                    <div class="member-name">
                        <div class="small-icon">
                            <%= inline_svg_tag "crown_small.svg" %>
                        </div>
                        <p>Anonymous</p>
                    </div>
                <% end %>
                <%= image_tag "dog" %>
                <p><%= post.body %></p>
            </div>
        <% end %>
    </ul>
</div>