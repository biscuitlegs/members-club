<div class="container">
    <div class="post-title">
        <% if member_signed_in? %>
            <h1><%= @post.member.name %></h1>
        <% else %>
            <h1>Anonymous</h1>
        <% end %>
    </div>
    <div class="post-body">
        <p>
            <%= @post.body %>
        </p>
    </div>

    <div class="button">
        <a href="<%= posts_path %>">
            <p>Back</p>
        </a>
    </div>

    <% if member_signed_in? && current_member.id == @post.member.id %>
        <%= link_to "Edit", edit_post_path(@post) %>
        <%= link_to "Delete", @post, method: :delete, data: { confirm: "Are you sure you want to delete this Post?" } %>
    <% end %>

</div>
