<% if member_signed_in? %>
    <h1><%= @post.member.name %></h1>
<% else %>
    <h1><%= link_to "Sign in", new_member_session_path %> to see which Member made this Post!</h1>
<% end %>

<p>
    <%= @post.body %>
</p>

<% if member_signed_in? && current_member.id == @post.member.id %>
    <%= link_to "Edit", edit_post_path(@post) %>
    <%= link_to "Delete", @post, method: :delete, data: { confirm: "Are you sure you want to delete this Post?" } %>
<% end %>

<%= link_to "<<Back", :back %>